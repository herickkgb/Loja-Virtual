<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.LojaVirtual" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <!-- Desabilita a seta de retorno -->
        <item name="android:homeAsUpIndicator">@null</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <!-- Defina o tema do RadioButton -->
    <style name="RadioButtonTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/radio_text_color</item>
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/dark_blue</item>
    </style>



</resources>
